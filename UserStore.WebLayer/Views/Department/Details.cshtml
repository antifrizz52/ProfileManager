@model UserStore.WebLayer.Models.DepartmentModel

@{
    ViewBag.Title = "Отдел - Детали";
}

<h3>Отдел - Детали</h3>
<hr />

<strong>@Html.LabelFor(model => model.Name)</strong>
@Html.DisplayFor(model => model.Name) <br />

<strong>@Html.LabelFor(model => model.Id)</strong>
@Html.DisplayFor(model => model.Name) <br />

<strong>Количество сотрудников</strong>
@Html.DisplayFor(model => model.Users.Count) <br />


<hr />

<h4>Список сотрудников</h4>

@if (Model.Users.Count == 0)
{
    <div class="text-center">Нет данных</div>
}
else
{
    <table class="table table-hover table-condensed table-bordered table-striped">
        <tr>
            <th class="text-center">
                @Html.ActionLink("№", "Details", new { sortOrder = ViewBag.IdSortParam })
            </th>
            <th class="text-center">
                @Html.ActionLink("Имя", "Details", new { sortOrder = ViewBag.NameSortParam })
            </th>
            <th class="text-center">
                Email
            </th>
            <th class="text-center">
                Телефон
            </th>
            <th class="text-center">
                @Html.ActionLink("Адрес", "Details", new { sortOrder = ViewBag.AddressSortParam })
            </th>
        </tr>

        @foreach (var item in Model.Users)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
            </tr>
        }
    </table>
    <hr />
    <div>
        @Html.ActionLink("Назад к списку", "Index", new { controller = "Department" }, new { @class = "btn btn-primary btn-sm" })
        @Html.ActionLink("Редактировать", "Edit", "Department", new { id = Model.Id }, new { @class = "btn btn-primary btn-sm" })
    </div>
}


