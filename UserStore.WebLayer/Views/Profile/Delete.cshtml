@model UserStore.WebLayer.Models.UserProfileModel
@{
    ViewBag.Title = "Профиль пользователя - Удалить";
}

<br />

@using (Html.BeginForm())
{
    <div class="text-center alert alert-danger">
        <h3>Вы уверены, что хотите удалить профиль пользователя @Html.ValueForModel(Model.Name)?</h3>
    </div>
    <hr />
    <div class="text-center">
        @Html.ActionLink("Отмена", "Index", new { controller = "Profile" }, new { @class = "btn btn-primary btn-sm" })
        <input type="submit" value="Удалить" class="btn btn-danger btn-sm" />
    </div>
}
